<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="me.goodnesskayode.curis.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/name"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="Full Name"
            android:paddingBottom="15dp"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="E-mail"
            android:paddingBottom="15dp"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mobile"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="Mobile Number"
            android:paddingBottom="15dp"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/next_name"
            android:drawablePadding="@dimen/drawable_padding"
            android:paddingBottom="15dp"
            android:hint="Next Of Kin"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mobile"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="Next Of Kin Mobile Number"
            android:paddingBottom="15dp"
            android:inputType="text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="@dimen/drawable_padding"
            android:hint="Home Address"
            android:paddingBottom="46dp"
            android:inputType="textMultiLine"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"
            android:drawablePadding="@dimen/drawable_padding"
            android:paddingBottom="46dp"
            android:hint="Work Address"
            android:inputType="textMultiLine"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textColor="#F3B418"
            android:text="Save"/>

    </LinearLayout>

</ScrollView>