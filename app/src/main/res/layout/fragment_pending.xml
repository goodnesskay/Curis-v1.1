<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@color/black"
            android:layout_marginRight="110dp"
            android:textSize="@dimen/recycler_text_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adewale Ifeoluwa"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginRight="93dp"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17,bellview Street, Osbone Offshore"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination:"
            android:layout_marginRight="73dp"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="St. Nicolas Hospital,CMS,LAGOS"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of patients:"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/recycler_text_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >
        <Button
            android:id="@+id/view_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View on Map"
            android:textColor="@color/white"
            android:background="@drawable/blue_button"
            android:layout_marginRight="20dp"
            android:padding="16dp"
            />
        <Button
            android:id="@+id/accept_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel Trip"
            android:textColor="@color/white"
            android:background="@drawable/blue_button"
            android:padding="16dp"
            />
    </LinearLayout>

</LinearLayout>


